# gaps
gaps inner 20
gaps outer 20

# assign workspaces to correct screen
workspace 2 output DVI-I-1
workspace 1 output DVI-D-0
workspace 3 output DP-1
workspace 4 output DVI-I-1
workspace 5 output DVI-I-1
workspace 7 output DVI-D-0

# start polybar
exec --no-startup-id polybar top

output DP-1 pos 0 0 res 1920x1080
output DVI-I-1 pos 1920 0 res 1920x1080
output DVI-D-1 pos 3840 0 res 1920x1080
output DVI-D-1 transform 270

output "*" background /home/martin/media/pictures/wallpapers/random/DLVrQ2a.png fill

for_window [class="^.*"] border none

